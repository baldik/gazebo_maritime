<?xml version="1.0"?>
<sdf version="1.6">
  <model name="underwater_vehicle">
    <!-- Main body with buoyancy -->
    <link name="base_link">
      <inertial>
        <mass>50.0</mass>
        <inertia>
          <ixx>1.25</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>1.25</iyy>
          <iyz>0.0</iyz>
          <izz>2.5</izz>
        </inertia>
      </inertial>

      <!-- Collision for physics -->
      <collision name="collision">
        <geometry>
          <box>
            <size>1.0 0.4 0.3</size>
          </box>
        </geometry>
      </collision>

      <!-- Visual representation -->
      <visual name="visual">
        <geometry>
          <box>
            <size>1.0 0.4 0.3</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.0 0.0 1.0</diffuse>  <!-- Blue color -->
          <specular>0.1 0.1 0.1</specular>
        </material>
      </visual>
    </link>

    <!-- Front thruster -->
    <link name="front_thruster">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0001</iyy>
          <iyz>0.0</iyz>
          <izz>0.0001</izz>
        </inertia>
      </inertial>

      <collision name="thruster_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="thruster_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.8 0.8 0.8</diffuse>
          <specular>0.5 0.5 0.5</specular>
        </material>
      </visual>
    </link>

    <!-- Rear thruster -->
    <link name="rear_thruster">
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.0001</iyy>
          <iyz>0.0</iyz>
          <izz>0.0001</izz>
        </inertia>
      </inertial>

      <collision name="rear_thruster_collision">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="rear_thruster_visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.8 0.8 0.8</diffuse>
          <specular>0.5 0.5 0.5</specular>
        </material>
      </visual>
    </link>

    <!-- Left fin -->
    <link name="left_fin">
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <collision name="left_fin_collision">
        <geometry>
          <box>
            <size>0.1 0.3 0.05</size>
          </box>
        </geometry>
      </collision>

      <visual name="left_fin_visual">
        <geometry>
          <box>
            <size>0.1 0.3 0.05</size>
          </box>
        </geometry>
        <material>
          <diffuse>1.0 0.0 0.0</diffuse>
          <specular>0.5 0.5 0.5</specular>
        </material>
      </visual>
    </link>

    <!-- Right fin -->
    <link name="right_fin">
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyy>0.001</iyy>
          <iyz>0.0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <collision name="right_fin_collision">
        <geometry>
          <box>
            <size>0.1 0.3 0.05</size>
          </box>
        </geometry>
      </collision>

      <visual name="right_fin_visual">
        <geometry>
          <box>
            <size>0.1 0.3 0.05</size>
          </box>
        </geometry>
        <material>
          <diffuse>1.0 0.0 0.0</diffuse>
          <specular>0.5 0.5 0.5</specular>
        </material>
      </visual>
    </link>

    <!-- Joints connecting thrusters and fins -->
    <joint name="front_thruster_joint" type="revolute">
      <parent>base_link</parent>
      <child>front_thruster</child>
      <pose>0.5 0 0 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rear_thruster_joint" type="revolute">
      <parent>base_link</parent>
      <child>rear_thruster</child>
      <pose>-0.5 0 0 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
      </axis>
    </joint>

    <joint name="left_fin_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_fin</child>
      <pose>0 0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.5</lower>
          <upper>0.5</upper>
        </limit>
      </axis>
    </joint>

    <joint name="right_fin_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_fin</child>
      <pose>0 -0.2 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-0.5</lower>
          <upper>0.5</upper>
        </limit>
      </axis>
    </joint>

    <!-- Hydrodynamics plugin for underwater behavior -->
    <plugin
      filename="ignition-gazebo-hydrodynamics-system"
      name="ignition::gazebo::systems::Hydrodynamics">
      <link_name>base_link</link_name>
      <xDotU>-5.0</xDotU>
      <yDotV>-100.0</yDotV>
      <zDotW>-100.0</zDotW>
      <kDotP>-0.1</kDotP>
      <mDotQ>-20.0</mDotQ>
      <nDotR>-20.0</nDotR>
      <xUU>-8.0</xUU>
      <xU>0</xU>
      <yVV>-500.0</yVV>
      <yV>0</yV>
      <zWW>-500.0</zWW>
      <zW>0</zW>
      <kPP>-0.1</kPP>
      <kP>0</kP>
      <mQQ>-300.0</mQQ>
      <mQ>0</mQ>
      <nRR>-300.0</nRR>
      <nR>0</nR>
    </plugin>

    <!-- Buoyancy plugin -->
    <plugin
      filename="ignition-gazebo-buoyancy-system"
      name="ignition::gazebo::systems::Buoyancy">
    </plugin>

    <!-- Thruster control plugin -->
    <plugin
      filename="ignition-gazebo-velocity-control-system"
      name="ignition::gazebo::systems::VelocityControl">
      <link_name>base_link</link_name>
    </plugin>
  </model>
</sdf>